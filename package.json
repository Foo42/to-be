{
  "name": "todo-to-be",
  "version": "0.0.1",
  "description": "todo manager",
  "scripts": {
    "start": "node build/src",
    "test": "mocha build/test/bootstrap.js \"build/test/**/*.test.js\"",
    "posttest": "tslint --project ./ --fix",
    "pretest": "npm run build",
    "build": "tsc",
    "prebuild": "rm -rf build && cpx 'src/**/!(*.ts)' build/src -v && cpx 'test/**/!(*.ts)' build/test -v",
    "dev": "nodemon -e ts,handlebars,json,yml -i build --exec \"npm test\""
  },
  "author": "Julian Haeger",
  "license": "MIT",
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/chai": "^4.0.8",
    "@types/fs-extra": "^5.0.0",
    "@types/js-yaml": "^3.10.1",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.5.1",
    "chai": "^4.1.2",
    "cpx": "^1.5.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "fs-extra": "^5.0.0",
    "js-yaml": "^3.10.0"
  }
}
